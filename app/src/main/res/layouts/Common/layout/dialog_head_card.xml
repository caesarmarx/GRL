<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutContent"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_header"
        android:background="@drawable/dlg_header_round"
        android:textSize="@dimen/font17"
        android:textColor="@color/dark_gray_color"
        android:gravity="center"
        android:text="@string/card_skill_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="30dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgPhoto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/user_default"
            app:riv_corner_radius="@dimen/normal_radius"
            app:riv_oval="false"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/dark_gray_color"/>
            <TextView
                android:id="@+id/tvUserJob"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/dark_gray_color"
                android:textSize="@dimen/font15"
                android:text="@string/card_job_title"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tvUserEst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:textColor="@color/dark_gray_color"
        android:textSize="@dimen/font15"
        android:text="@string/card_est_title"/>

    <TextView
        android:id="@+id/tvRel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:textColor="@color/dark_gray_color"
        android:textSize="@dimen/font15"
        android:text="@string/card_rel_title"/>

    <TextView
        android:id="@+id/tvUserStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:textColor="@color/dark_gray_color"
        android:textSize="@dimen/font15"
        android:text="@string/card_status_title"/>
    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:textColor="@color/dark_gray_color"
        android:textSize="@dimen/font15"
        android:text="@string/card_distance_title"/>
</LinearLayout>
    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_footer"
        android:gravity="center"
        android:background="@drawable/dlg_footer_round"
        android:textSize="@dimen/font17"
        android:textColor="@color/dark_gray_color"
        android:text="@string/card_btn_confirm"/>
</LinearLayout>