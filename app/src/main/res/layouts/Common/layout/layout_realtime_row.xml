<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/small_cell_height"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:text=""
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font15"
        android:visibility="gone"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_user_photo"
        style="@style/img_photo_round"
        app:riv_oval="true"
        android:layout_toEndOf="@id/tv_number"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/border_margin"
        android:layout_centerVertical="true"
        android:src="@drawable/user_default"/>

    <RelativeLayout
        android:layout_toEndOf="@id/img_user_photo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="20dp">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font15"
            android:singleLine="true"
            android:text="Name"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_user_state"
        android:layout_width="60dp"
        android:layout_height="@dimen/small_btn_height"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:text=""
        android:gravity="right"
        android:textColor="@color/light_gray_color"
        android:textSize="@dimen/font13"/>
    <View
        android:id="@+id/iv_circle_red"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:background="@drawable/circle_fill_red"/>

</RelativeLayout>