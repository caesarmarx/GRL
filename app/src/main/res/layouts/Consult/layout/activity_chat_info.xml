<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_group_color">

    <!-- nav header -->
    <include layout="@layout/layout_header"/>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/list_group_color"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <include layout="@layout/normal_section_row"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_section_height"/>

            <LinearLayout
                style="@style/section_style">
                <TextView
                    style="@style/section_title_style"
                    android:text="@string/chat_target"/>
                <TextView
                    android:id="@+id/tv_target"
                    style="@style/section_value_style"/>
            </LinearLayout>

            <include layout="@layout/layout_border"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/section_padding_size"/>

            <LinearLayout
                android:id="@+id/linear_record_rule"
                style="@style/section_style">
                <TextView
                    style="@style/section_sub_btn_style"
                    android:text="@string/chat_time_rule" />
            </LinearLayout>

            <include layout="@layout/layout_border"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/section_padding_size"/>

            <LinearLayout
                android:id="@+id/linear_estimate_rule"
                style="@style/section_style">
                <TextView
                    style="@style/section_sub_btn_style"
                    android:text="@string/chat_estimate_rule" />
            </LinearLayout>

            <include layout="@layout/normal_section_row"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_section_height"/>

            <LinearLayout
                android:id="@+id/linear_judge_rule"
                style="@style/section_style">
                <TextView
                    style="@style/section_sub_btn_style"
                    android:text="@string/chat_judge_rule" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>