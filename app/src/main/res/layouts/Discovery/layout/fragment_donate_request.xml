<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:id="@+id/main_layout">
    <EditText
        android:id="@+id/etDonateReq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/donate_request_hint"
        android:textSize="@dimen/font17"
        android:textAlignment="textStart"
        android:singleLine="false"
        android:lines="2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/font17"
        android:textColor="@color/dark_gray_color"
        android:text="@string/donate_request_phone_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/firstTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font17"
            android:layout_centerVertical="true"
            android:text="1"/>
        <EditText
            android:id="@+id/etFirst"
            android:layout_toRightOf="@id/firstTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font15"
            android:singleLine="true" />
        <ImageView
            android:id="@+id/imgFirstCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/check_yellow"
            android:visibility="invisible"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/secondTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font17"
            android:layout_centerVertical="true"
            android:text="2"/>
        <EditText
            android:id="@+id/etSecond"
            android:layout_toRightOf="@id/secondTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font15"
            android:singleLine="true" />
        <ImageView
            android:id="@+id/imgSecondCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            android:src="@drawable/check_yellow"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/thirdTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font17"
            android:layout_centerVertical="true"
            android:text="3"/>
        <EditText
            android:id="@+id/etThird"
            android:layout_toRightOf="@id/thirdTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font15"
            android:singleLine="true" />
        <ImageView
            android:id="@+id/imgThirdCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            android:src="@drawable/check_yellow"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fourthTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font17"
            android:layout_centerVertical="true"
            android:text="4"/>
        <EditText
            android:id="@+id/etFourth"
            android:layout_toRightOf="@id/fourthTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font15"
            android:singleLine="true" />
        <ImageView
            android:id="@+id/imgFourthCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            android:src="@drawable/check_yellow"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fifthTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font17"
            android:layout_centerVertical="true"
            android:text="5"/>
        <EditText
            android:id="@+id/etFifth"
            android:layout_toRightOf="@id/fifthTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font15"
            android:singleLine="true" />
        <ImageView
            android:id="@+id/imgFifthCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            android:src="@drawable/check_yellow"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btnRequest"
        android:layout_width="match_parent"
        android:layout_height="@dimen/samll_cell_height"
        android:layout_marginLeft="@dimen/func_btn_margin"
        android:layout_marginRight="@dimen/func_btn_margin"
        android:layout_marginTop="30dp"
        android:background="@drawable/yellow_btn_selection"
        android:textSize="@dimen/font17"
        android:textColor="@color/dark_gray_color"
        android:text="@string/request_title"/>
</LinearLayout>