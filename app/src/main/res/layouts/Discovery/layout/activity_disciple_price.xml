<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_header"/>
    <include
        android:id="@+id/layoutFirst"
        layout="@layout/normal_section_row"/>
    <TextView
        android:id="@+id/tvHelp"
        style="@style/TxtTitle"
        android:layout_height="@dimen/samll_cell_height"
        android:textSize="@dimen/font17"
        android:gravity="center_vertical"
        android:background="@drawable/setting_item_selector"
        android:layout_width="fill_parent"
        android:paddingLeft="@dimen/row_view_margin"
        android:paddingRight="@dimen/row_view_margin"
        android:layout_gravity="center_vertical"
        android:drawablePadding="@dimen/border_margin"
        android:drawableRight="@drawable/right"
        android:text="@string/disciple_price_help"/>
    <include
        android:id="@+id/layout_second"
        layout="@layout/normal_section_row"/>
    <RelativeLayout
        android:id="@+id/layout_switch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/samll_cell_height"
        android:background="@drawable/setting_item_selector">
        <TextView
            android:id="@+id/tvPriceStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/row_view_margin"
            android:textSize="@dimen/font17"
            android:textColor="@android:color/black"
            android:text="@string/price_status"/>
        <Switch
            android:id="@+id/switch_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/row_view_margin"
            android:checked="true"
            android:theme="@style/SCBSwitch"
            android:background="@android:color/transparent"/>
    </RelativeLayout>
    <include layout="@layout/normal_section_row"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/samll_cell_height"
        android:background="@drawable/setting_item_selector">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/row_view_margin"
            android:textSize="@dimen/font17"
            android:textColor="@android:color/black"
            android:text="@string/price_vale"/>
        <TextView
            android:id="@+id/tvPriceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/row_view_margin"
            android:textSize="@dimen/font17"
            android:textColor="@color/light_gray_color"
            android:text=""/>
    </RelativeLayout>
    <include layout="@layout/normal_section_row"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/row_view_margin"
            android:textSize="@dimen/font17"
            android:textColor="@android:color/black"
            android:text="@string/price_chart"/>
        <lecho.lib.hellocharts.view.LineChartView
            android:id="@+id/lineChart"
            android:layout_below="@id/tvHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
</LinearLayout>