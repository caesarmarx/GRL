<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/samll_cell_height"
    android:background="@drawable/setting_item_selector">
    <TextView
        android:id="@+id/tvFGroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/row_view_margin"
        android:textSize="@dimen/font15"
        android:layout_centerVertical="true"
        android:text=""/>
    <ImageView
        android:id="@+id/imgCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/row_view_margin"
        android:layout_centerVertical="true"
        android:src="@drawable/check_yellow"
        android:visibility="invisible"/>
    <View
        android:id="@+id/view_border"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/border_margin"
        android:background="@color/list_border_color"/>
    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="@dimen/font15"
        android:textColor="@color/light_gray_color"
        android:text="@string/empty_fgroup"
        android:visibility="gone"/>
</RelativeLayout>