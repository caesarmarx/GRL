<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_group_color">
    <include layout="@layout/layout_header"/>
    <include layout="@layout/normal_section_row"/>
    <TextView
        android:id="@+id/tvDescription"
        style="@style/TxtTitle"
        android:layout_height="@dimen/samll_cell_height"
        android:textSize="@dimen/font17"
        android:gravity="center_vertical"
        android:background="@drawable/setting_item_selector"
        android:layout_width="fill_parent"
        android:paddingLeft="@dimen/row_view_margin"
        android:paddingRight="@dimen/row_view_margin"
        android:layout_gravity="center_vertical"
        android:drawablePadding="@dimen/border_margin"
        android:drawableRight="@drawable/right"
        android:text="@string/other_description"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_border_color"/>
    <LinearLayout
        android:id="@+id/layoutConnection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_section_height"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/samll_cell_height"
            android:background="@drawable/setting_item_selector">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/row_view_margin"
                android:textSize="@dimen/font17"
                android:textColor="@android:color/black"
                android:text="@string/connection_title"/>
            <Switch
                android:id="@+id/switch_connection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/row_view_margin"
                android:checked="false"
                android:theme="@style/SCBSwitch"
                android:background="@android:color/transparent"/>
        </RelativeLayout>
        <include layout="@layout/layout_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/samll_cell_height"
            android:background="@drawable/setting_item_selector">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/row_view_margin"
                android:textSize="@dimen/font17"
                android:textColor="@android:color/black"
                android:text="@string/relation_block"/>
            <Switch
                android:id="@+id/switch_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/row_view_margin"
                android:checked="false"
                android:theme="@style/SCBSwitch"
                android:background="@android:color/transparent"/>
        </RelativeLayout>
        <include layout="@layout/layout_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/samll_cell_height"
            android:background="@drawable/setting_item_selector">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/row_view_margin"
                android:textSize="@dimen/font17"
                android:textColor="@android:color/black"
                android:text="@string/relation_dnd"/>
            <Switch
                android:id="@+id/switch_dnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/row_view_margin"
                android:checked="false"
                android:theme="@style/SCBSwitch"
                android:background="@android:color/transparent"/>
        </RelativeLayout>
        <include layout="@layout/normal_section_row"/>
        <TextView
            android:id="@+id/tvPost"
            style="@style/TxtTitle"
            android:layout_height="@dimen/samll_cell_height"
            android:textSize="@dimen/font17"
            android:gravity="center_vertical"
            android:background="@drawable/setting_item_selector"
            android:layout_width="fill_parent"
            android:paddingLeft="@dimen/row_view_margin"
            android:paddingRight="@dimen/row_view_margin"
            android:layout_gravity="center_vertical"
            android:drawablePadding="@dimen/border_margin"
            android:drawableRight="@drawable/right"
            android:text="@string/fgroup_post"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/list_border_color"/>
    </LinearLayout>
</LinearLayout>