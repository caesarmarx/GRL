<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_margin="20dp"
    android:background="@drawable/round_fill_group_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:background="@drawable/round_fill_top_white"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/gender_group"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:checkedButton="@+id/gender_all">

            <RadioButton
                android:id="@+id/gender_all"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/light_gray_color"
                android:textSize="@dimen/font17"
                android:text="@string/gender_all"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/gender_man"
                android:textColor="@color/light_gray_color"
                android:textSize="@dimen/font17"
                android:text="@string/gender_man"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/gender_woman"
                android:textColor="@color/light_gray_color"
                android:textSize="@dimen/font17"
                android:text="@string/gender_woman"/>
        </RadioGroup>

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/area_group"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:checkedButton="@+id/area_all">

            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/area_all"
                android:textColor="@color/light_gray_color"
                android:textSize="@dimen/font17"
                android:text="@string/area_all"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:id="@+id/city_all"
                android:textColor="@color/light_gray_color"
                android:textSize="@dimen/font17"
                android:text="@string/city_all"/>
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\@"
                android:layout_gravity="center"
                android:textColor="@color/light_gray_color"
                android:textSize="@dimen/font17"/>
            <TextView
                android:id="@+id/phone_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/submit_phone_placeholder"
                android:background="@android:color/transparent"
                android:textColorHint="@color/light_gray_color"
                android:textColor="@color/light_gray_color"
                android:textSize="@dimen/font17"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/direction"
                android:layout_gravity="center"
                android:textColor="@color/light_gray_color"
                android:textSize="@dimen/font17"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/mindistance_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:inputType="number"
                        android:background="@drawable/edittext_bottom_line"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font17"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="米 到"
                    android:textColor="@color/light_gray_color"
                    android:layout_gravity="center"
                    android:textSize="@dimen/font17"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/maxdistance_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:inputType="number"
                        android:background="@drawable/edittext_bottom_line"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font17"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="米"
                    android:textColor="@color/light_gray_color"
                    android:layout_gravity="center"
                    android:textSize="@dimen/font17"
                    android:layout_marginStart="5dp"/>

                <Button
                    android:id="@+id/location_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/order_location"/>

                <Button
                    android:id="@+id/direction_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/direction_btn"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/list_border_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_generic_layout_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_ok"
            style="@style/dlg_btn_style"
            android:layout_width="0.0dip"
            android:layout_height="40dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="确定"/>

        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@android:color/white" />

        <Button
            android:id="@+id/btn_cancel"
            style="@style/dlg_btn_style"
            android:layout_width="0.0dip"
            android:layout_height="40dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="取消"/>

    </LinearLayout>
</LinearLayout>