<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/submit_view_top"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top"
                android:background="@drawable/sound_btn"/>

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top"
                android:background="@drawable/order_submit_user"/>

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top"
                android:background="@drawable/order_submit_budget"/>

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top"
                android:background="@drawable/order_submit_skill"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionSend"/>

        </LinearLayout>
    </android.support.percent.PercentRelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/submit_view_bottom"
        app:layout_aspectRatio="2.7%"/>

</android.support.percent.PercentRelativeLayout>