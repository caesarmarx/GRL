<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tgroup_section_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/setting_item_selector">

    <LinearLayout
        android:id="@+id/layoutImages"
        android:layout_width="@dimen/large_cell_height"
        android:layout_height="@dimen/large_cell_height"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/border_margin"
        android:background="@drawable/round_border_white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_first"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:riv_oval="false"
                app:riv_corner_radius_top_left="@dimen/normal_radius"/>
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_second"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="1dp"
                android:scaleType="fitXY"
                app:riv_oval="false"
                app:riv_corner_radius_top_right="@dimen/normal_radius"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_third"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:riv_oval="false"
                app:riv_corner_radius_bottom_left="@dimen/normal_radius"/>
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_fourth"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="1dp"
                android:scaleType="fitXY"
                app:riv_oval="false"
                app:riv_corner_radius_top_right="@dimen/normal_radius"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_toRightOf="@id/layoutImages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp">
        <TextView
            android:id="@+id/txt_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font15"
            android:text=""/>
        <TextView
            android:id="@+id/txt_group_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:textColor="@color/light_gray_color"
            android:textSize="@dimen/font15"
            android:text=""/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        style="@style/placeholder_style"
        android:text="@string/empty_fgroup"/>
    <include
        android:id="@+id/view_border"
        layout="@layout/layout_border"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/border_margin"/>
</RelativeLayout>