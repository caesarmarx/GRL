<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_header"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/light_yellow_back">
        <ImageView
            android:id="@+id/img_order_plate"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/border_margin"
            android:src="@drawable/gold_coin"/>
        <RelativeLayout
            android:layout_toRightOf="@id/img_order_plate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/txt_order_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font15"
                android:text="gold plate"/>
            <TextView
                android:id="@+id/txt_order_cnt"
                android:layout_toRightOf="@id/txt_order_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font15"
                android:text="0"/>

            <TextView
                android:id="@+id/txt_assist_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font15"
                android:text="@string/order_assist_title"/>
            <TextView
                android:id="@+id/txt_assist_cnt"
                android:layout_toRightOf="@id/txt_assist_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font15"
                android:text="0"/>

            <TextView
                android:id="@+id/txt_power_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font15"
                android:text="@string/order_power_title"/>
            <TextView
                android:id="@+id/txt_power"
                android:layout_toRightOf="@id/txt_power_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="30dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font15"
                android:text="0.00"/>
        </RelativeLayout>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"/>
</LinearLayout>