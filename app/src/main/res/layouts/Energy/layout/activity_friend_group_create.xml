<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_header"
        android:id="@+id/view_header"/>
    <RelativeLayout
        android:id="@+id/layout_view"
        android:layout_below="@id/view_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_group_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            style="@style/TxtTitle"
            android:textSize="@dimen/font17"
            android:textColor="@android:color/black"
            android:text="@string/friend_group_title"/>
        <EditText
            android:id="@+id/et_group_name"
            android:layout_toLeftOf="@id/txt_group_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/font17"
            android:textColor="@android:color/black"
            android:text=""
            android:hint="@string/fgroup_create_hint"
            android:textAlignment="center"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_create"
        android:layout_below="@id/layout_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/samll_cell_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/func_btn_margin"
        android:layout_marginRight="@dimen/func_btn_margin"
        android:layout_marginTop="30dp"
        android:background="@drawable/yellow_btn_selection"
        android:textColor="@color/dark_gray_color"
        android:textSize="@dimen/font17"
        android:text="@string/create_title"/>
</RelativeLayout>