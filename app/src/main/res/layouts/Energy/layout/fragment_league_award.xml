<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/normal_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font17"
            android:text="@string/awarding_title"/>
        <TextView
            android:id="@+id/tvLeagueTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font17"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font17"
            android:text="@string/awarding_time"/>
        <TextView
            android:id="@+id/tvLeagueTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font17"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font17"
            android:text="@string/awarding_table"/>
        <TextView
            android:id="@+id/tvLeagueSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tvFirstCup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/font17"
                android:text="@string/cup"/>
            <TextView
                android:id="@+id/tvFirstTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tvFirstCup"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/font17"
                android:text="@string/awarding_first"/>
            <Button
                android:id="@+id/btnFirst"
                android:layout_width="@dimen/normal_btn_width"
                android:layout_height="@dimen/normal_btn_height"
                android:layout_alignParentRight="true"
                android:background="@drawable/yellow_btn_selection"
                android:textColor="@color/dark_gray_color"
                android:text="@string/awarding"/>
            <TextView
                android:id="@+id/tvSecondName"
                android:layout_toRightOf="@id/tvFirstTitle"
                android:layout_toLeftOf="@id/btnFirst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tvSecondCup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/font17"
                android:text="@string/cup"/>
            <TextView
                android:id="@+id/tvSecondTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tvSecondCup"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/font17"
                android:text="@string/awarding_second"/>
            <Button
                android:id="@+id/btnSecond"
                android:layout_width="@dimen/normal_btn_width"
                android:layout_height="@dimen/normal_btn_height"
                android:layout_alignParentRight="true"
                android:background="@drawable/yellow_btn_selection"
                android:textColor="@color/dark_gray_color"
                android:text="@string/awarding"/>
            <TextView
                android:id="@+id/tvThirdName"
                android:layout_toRightOf="@id/tvSecondTitle"
                android:layout_toLeftOf="@id/btnSecond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tvThirdCup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/font17"
                android:text="@string/cup"/>
            <TextView
                android:id="@+id/tvThirdTitle"
                android:layout_toRightOf="@id/tvThirdCup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/font17"
                android:text="@string/awarding_third"/>
            <Button
                android:id="@+id/btnThird"
                android:layout_width="@dimen/normal_btn_width"
                android:layout_height="@dimen/normal_btn_height"
                android:layout_alignParentRight="true"
                android:background="@drawable/yellow_btn_selection"
                android:textColor="@color/dark_gray_color"
                android:text="@string/awarding"/>
            <TextView
                android:id="@+id/tvSpecialName"
                android:layout_toRightOf="@id/tvThirdTitle"
                android:layout_toLeftOf="@id/btnThird"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tvSpecialCup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/font17"
                android:text="@string/cup"/>
            <TextView
                android:id="@+id/tvSpecialTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tvSpecialCup"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/font17"
                android:text="@string/awarding_special"/>
            <Button
                android:id="@+id/btnSpecial"
                android:layout_width="@dimen/normal_btn_width"
                android:layout_height="@dimen/normal_btn_height"
                android:layout_alignParentRight="true"
                android:background="@drawable/yellow_btn_selection"
                android:textColor="@color/dark_gray_color"
                android:text="@string/awarding"/>
            <TextView
                android:id="@+id/tvFirstName"
                android:layout_toRightOf="@id/tvSpecialTitle"
                android:layout_toLeftOf="@id/btnSpecial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>