<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="@dimen/horizontal_cell_height"
    android:layout_height="@dimen/horizontal_cell_height"
    android:background="@drawable/list_selected_back"
    android:gravity="center"
    android:padding="5dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_user_photo"
        style="@style/img_photo_round"
        app:riv_corner_radius="@dimen/normal_radius"
        app:riv_oval="false"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/user_default"/>
    <TextView
        android:id="@+id/txt_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/font15"
        android:text="player1"/>
</LinearLayout>