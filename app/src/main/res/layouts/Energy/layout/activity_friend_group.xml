<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_header"
        android:id="@+id/view_header"/>
    <Button
        android:id="@+id/btn_create_group"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/samll_cell_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/func_btn_margin"
        android:layout_marginRight="@dimen/func_btn_margin"
        android:background="@drawable/yellow_btn_selection"
        android:textColor="@color/dark_gray_color"
        android:textSize="@dimen/font17"
        android:text="@string/friend_create"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/view_header"
        android:layout_above="@+id/btn_create_group"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/list_group_color"
                android:textSize="@dimen/font17"
                android:textColor="@color/dark_gray_color"
                android:gravity="center"
                android:text="@string/invited_fgroup_title"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/top_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/list_group_color"
                android:textSize="@dimen/font17"
                android:textColor="@color/dark_gray_color"
                android:gravity="center"
                android:text="@string/created_fgroup_title"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/down_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>