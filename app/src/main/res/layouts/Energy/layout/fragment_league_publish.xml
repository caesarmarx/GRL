<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/normal_padding">

    <TextView
        android:id="@+id/tvLeagueTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/font17"
        android:textColor="@color/dark_gray_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/dark_gray_color"
            android:textSize="@dimen/font17"
            android:text=" - "/>
        <TextView
            android:id="@+id/tvStartTime"
            android:layout_toLeftOf="@id/tvLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="3dp"
            android:background="@drawable/app_pref_bg"
            android:textColor="@color/dark_gray_color"
            android:textSize="@dimen/font15"
            android:singleLine="true"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/tvEndTime"
            android:layout_toRightOf="@id/tvLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="3dp"
            android:background="@drawable/app_pref_bg"
            android:textColor="@color/dark_gray_color"
            android:textSize="@dimen/font15"
            android:singleLine="true"
            android:textAlignment="center"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/btn_league_publish"
            android:layout_width="@dimen/small_btn_width"
            android:layout_height="@dimen/small_btn_height"
            android:layout_alignParentRight="true"
            android:background="@drawable/yellow_btn_selection"
            android:textColor="@color/dark_gray_color"
            android:text="@string/donate_request_confirm"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>
</LinearLayout>