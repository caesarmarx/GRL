<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/large_cell_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/setting_item_selector">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <!--<ImageView-->
            <!--android:id="@+id/user_photo"-->
            <!--android:layout_width="@dimen/normal_imageview_size"-->
            <!--android:layout_height="@dimen/normal_imageview_size"-->
            <!--android:layout_marginLeft="21dp"-->
            <!--android:scaleType="fitXY"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:src="@drawable/user_default"/>-->

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/user_photo"
            android:layout_width="@dimen/normal_imageview_size"
            android:layout_height="@dimen/normal_imageview_size"
            android:layout_marginLeft="21dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:src="@drawable/user_default"
            app:riv_corner_radius="5dp"
            app:riv_mutate_background="true"
            app:riv_oval="false"/>

        <TextView
            android:id="@+id/txt_relative"
            android:textColor="@color/light_gray_color"
            android:textSize="@dimen/font15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:text="" />
        <TextView
            android:id="@+id/rel_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font15"
            android:textColor="@color/light_gray_color"
            android:layout_gravity="center_vertical"
            android:text="@string/cup"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/txt_member_name"
            android:textColor="@color/light_gray_color"
            android:textSize="@dimen/font15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:text=""/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/font15"
        android:textColor="@color/light_gray_color"
        android:text="@string/empty_disciples"
        android:gravity="center"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tvMore"
        style="@style/TxtTitle"
        android:layout_height="49dp"
        android:textSize="@dimen/font20"
        android:textColor="@color/light_gray_color"
        android:gravity="center_vertical"
        android:background="@drawable/setting_item_selector"
        android:layout_width="fill_parent"
        android:paddingLeft="21dp"
        android:paddingRight="@dimen/row_view_margin"
        android:layout_gravity="center_vertical"
        android:drawablePadding="@dimen/border_margin"
        android:drawableRight="@drawable/right"
        android:text="@string/more_title"
        android:visibility="gone"/>
    <include layout="@layout/layout_border"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/border_margin"/>
</RelativeLayout>