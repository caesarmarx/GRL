<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/large_cell_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/setting_item_selector">

    <LinearLayout
        android:id="@+id/layout_user_info"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/user_photo"
            android:layout_width="@dimen/normal_imageview_size"
            android:layout_height="@dimen/normal_imageview_size"
            android:layout_marginLeft="21dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:src="@drawable/user_default"
            app:riv_corner_radius="@dimen/normal_radius"
            app:riv_oval="false"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:textSize="@dimen/font15"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:text="" />
        <TextView
            android:id="@+id/tv_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:background="@android:color/transparent"
            android:text="@string/fgroup_est_up_title"
            android:textSize="@dimen/font15"/>
        <TextView
            android:id="@+id/tv_est_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:text="@string/fgroup_est_list_title"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font17"/>
        <TextView
            android:id="@+id/tv_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:text="@string/fgroup_est_down_title"
            android:textSize="@dimen/font15"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:textSize="@dimen/font15"
        android:textColor="@color/light_gray_color"
        android:text="@string/user_info_title"/>
    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/font15"
        android:textColor="@color/light_gray_color"
        android:text="@string/fgroup_est_list_empty"
        android:gravity="center"
        android:visibility="gone"/>
    <include layout="@layout/layout_border"
        android:id="@+id/layout_border"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/border_margin"/>
</RelativeLayout>