<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout= "@layout/layout_header"
        android:id="@+id/view_header"/>
    <LinearLayout
        android:layout_below="@id/view_header"
        android:id="@+id/menu_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/samll_cell_height"
        android:background="@color/white">
        <Button
            android:id="@+id/btn_tgroup_prepare"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/fgroup_menu_selector"
            android:textColor="@color/dark_gray_color"
            android:textSize="@dimen/font17"
            android:textAlignment="center"
            android:onClick="prepareClick"
            android:text="@string/tgroup_prepare_title"/>
        <Button
            android:id="@+id/btn_tgroup_league"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/fgroup_menu_selector"
            android:textColor="@color/dark_gray_color"
            android:textSize="@dimen/font17"
            android:textAlignment="center"
            android:onClick="leagueClick"
            android:text="@string/tgroup_league_title"/>
        <Button
            android:id="@+id/btn_tgroup_estimate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/fgroup_menu_selector"
            android:textColor="@color/dark_gray_color"
            android:textSize="@dimen/font17"
            android:textAlignment="center"
            android:onClick="estimateClick"
            android:text="@string/tgroup_estimate_title"/>
        <Button
            android:id="@+id/btn_tgroup_challenge"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/fgroup_menu_selector"
            android:textColor="@color/dark_gray_color"
            android:textSize="@dimen/font17"
            android:textAlignment="center"
            android:onClick="challengeClick"
            android:text="@string/tgroup_challenge_title"/>
    </LinearLayout>

    <grl.com.subViews.view.GroupChatView
        android:id="@+id/group_chat_view"
        android:layout_below="@id/menu_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </grl.com.subViews.view.GroupChatView>
</RelativeLayout>