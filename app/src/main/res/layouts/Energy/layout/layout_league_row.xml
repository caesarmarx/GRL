<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/league_cell_height"
    android:gravity="center"
    android:paddingLeft="@dimen/normal_padding"
    android:paddingRight="@dimen/normal_padding">

    <TextView
        android:id="@+id/tvNO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font15"/>
    <ImageView
        android:id="@+id/imgCheck"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/round_checked"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layoutCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgLeftPhoto"
                android:layout_width="@dimen/normal_imageview_size"
                android:layout_height="@dimen/normal_imageview_size"
                android:src="@drawable/user_default"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                app:riv_mutate_background="true"
                app:riv_oval="true" />
            <ImageView
                android:id="@+id/imgvPhoto"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_vs"/>

            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgRightPhoto"
                android:layout_width="@dimen/normal_imageview_size"
                android:layout_height="@dimen/normal_imageview_size"
                android:src="@drawable/user_default"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:riv_mutate_background="true"
                android:scaleType="fitXY"
                app:riv_oval="true" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/layoutCenter"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtLeft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:singleLine="true"
                android:textSize="@dimen/font15"/>
            <TextView
                android:id="@+id/tvLeftLeagueStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/layoutCenter"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvRightLeagueStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
            <TextView
                android:id="@+id/txtRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/layoutCenter"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:textAlignment="center"
                android:textSize="@dimen/font15"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvLeagueTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="3dp"
            android:textSize="@dimen/font13"
            android:textColor="@color/place_holder_color"/>
    </RelativeLayout>

</LinearLayout>