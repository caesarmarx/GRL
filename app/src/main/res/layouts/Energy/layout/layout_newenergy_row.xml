<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/large_cell_height"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_user_photo"
        android:layout_width="@dimen/samll_cell_height"
        android:layout_height="@dimen/samll_cell_height"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/border_margin"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/user_default"
        app:riv_corner_radius="@dimen/normal_radius"
        app:riv_oval="false"/>
    <RelativeLayout
        android:layout_toRightOf="@id/img_user_photo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp">
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font15"
            android:text="Name"/>
        <TextView
            android:id="@+id/tv_request_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="7dp"
            android:textColor="@color/light_gray_color"
            android:textSize="@dimen/font13"
            android:text=""/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_energy_request"
        android:layout_width="60dp"
        android:layout_height="@dimen/small_btn_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/yellow_btn_selection"
        android:textSize="@dimen/font15"
        android:textColor="@color/white"
        android:text="button"/>
    <include layout="@layout/layout_border"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/border_margin"/>
</RelativeLayout>