<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout= "@layout/layout_header"
        android:id="@+id/view_header"/>
    <LinearLayout
        android:id="@+id/menu_view"
        android:layout_below="@id/view_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/samll_cell_height"
        android:background="@color/white">
        <Button
            android:id="@+id/btn_group_ability"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fgroup_menu_selector"
            android:textColor="@color/light_gray_color"
            android:textSize="@dimen/font17"
            android:textAlignment="center"
            android:text="@string/fgroup_ability_title"/>
        <Button
            android:id="@+id/btn_estimate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fgroup_menu_selector"
            android:textColor="@color/light_gray_color"
            android:textSize="@dimen/font17"
            android:textAlignment="center"
            android:text="@string/fgroup_est_title"/>
        <Button
            android:id="@+id/btn_help"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fgroup_menu_selector"
            android:textColor="@color/light_gray_color"
            android:textSize="@dimen/font17"
            android:textAlignment="center"
            android:text="@string/fgroup_help_title"/>
        <Button
            android:id="@+id/btn_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fgroup_menu_selector"
            android:textColor="@color/light_gray_color"
            android:textSize="@dimen/font17"
            android:textAlignment="center"
            android:text="@string/fgroup_setting_title"/>
    </LinearLayout>
    <grl.com.subViews.view.GroupChatView
        android:id="@+id/group_chat_view"
        android:layout_below="@id/menu_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </grl.com.subViews.view.GroupChatView>
</RelativeLayout>