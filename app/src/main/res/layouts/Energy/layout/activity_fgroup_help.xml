<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_header"
        android:id="@+id/view_header"/>

    <RelativeLayout
        android:id="@+id/layout_req"
        android:layout_below="@id/view_header"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/list_group_color"
        android:padding="@dimen/border_margin">
        <EditText
            android:id="@+id/et_req_content"
            android:layout_above="@+id/btn_help"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:background="@color/white"/>
        <Button
            android:id="@+id/bnt_request_h"
            android:layout_width="80dp"
            android:layout_height="@dimen/small_btn_height"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/yellow_btn_selection"
            android:textColor="@color/dark_gray_color"
            android:textSize="@dimen/font15"
            android:text="@string/fgroup_help_btn"/>
    </RelativeLayout>
    <View
        android:id="@+id/view_border"
        android:layout_below="@id/layout_req"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/list_border_color"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_below="@id/view_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"/>
</RelativeLayout>