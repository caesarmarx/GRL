<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- navigation bar titleStyle -->
    <style name="txt_titleStyle1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/light_gray_color</item>
    </style>

    <!-- animation style -->
    <style name="AnimHead" parent="@android:style/Animation"> // Left Popup
        <item name="android:windowEnterAnimation">@anim/head_in</item>
        <item name="android:windowExitAnimation">@anim/head_out</item>
    </style>
    <style name="AnimRightHead" parent="@android:style/Animation"> // Right Popup
        <item name="android:windowEnterAnimation">@anim/right_head_in</item>
        <item name="android:windowExitAnimation">@anim/right_head_out</item>
    </style>
    <style name="AnimCenterHead" parent="@android:style/Animation"> // Center Popup
        <item name="android:windowEnterAnimation">@anim/center_head_in</item>
        <item name="android:windowExitAnimation">@anim/center_head_out</item>
    </style>
    <style name="AnimLeft" parent="@android:style/Animation"> //Operator From Right to Left
        <item name="android:windowEnterAnimation">@anim/head_left_in</item>
        <item name="android:windowExitAnimation">@anim/head_left_out</item>
    </style>

    <style name="img_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="TxtTitle" parent="@style/img_Style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">6.0dip</item>
        <item name="android:paddingRight">6.0dip</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="BaseDialog" parent="@android:style/Theme.Dialog" />
    <style name="Style_Dialog_Button">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff425968</item>
        <!--<item name="android:background">@drawable/btn_default</item>-->
        <item name="android:layout_marginLeft">6.0dip</item>
        <item name="android:layout_marginRight">6.0dip</item>
        <item name="android:minHeight">40.0dip</item>
    </style>

    <!-- Dialog Button Style -->
    <style name="dlg_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/dark_gray_color</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Full_Width_Dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="WaitingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Section Style -->
    <style name="section_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/small_cell_height</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="section_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingLeft">@dimen/section_padding_size</item>
        <item name="android:paddingRight">@dimen/section_padding_size</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/font17</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="section_value_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:paddingLeft">@dimen/section_padding_size</item>
        <item name="android:paddingRight">@dimen/section_padding_size</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/font17</item>
        <item name="android:textColor">@color/light_gray_color</item>
    </style>
    <style name="section_edit_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_marginLeft">@dimen/section_padding_size</item>
        <item name="android:layout_marginRight">@dimen/section_padding_size</item>
        <item name="android:background">@drawable/round_fill_white_with_border</item>
        <item name="android:textSize">@dimen/font17</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="section_btn_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/small_cell_height</item>
        <item name="android:layout_marginLeft">@dimen/cell_padding</item>
        <item name="android:layout_marginRight">@dimen/cell_padding</item>
        <item name="android:textSize">@dimen/font17</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="section_sub_btn_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font17</item>
        <item name="android:background">@drawable/setting_item_selector</item>
        <item name="android:paddingLeft">@dimen/section_padding_size</item>
        <item name="android:paddingRight">@dimen/section_padding_size</item>
        <item name="android:drawablePadding">@dimen/border_margin</item>
        <item name="android:drawableRight">@drawable/right</item>âˆ‚
    </style>

    <!-- Button Style -->

    <style name="small_btn_style">
        <item name="android:layout_width">@dimen/small_btn_width</item>
        <item name="android:layout_height">@dimen/small_btn_height</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">@dimen/font15</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/round_fill_yellow</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="normal_btn_style">
        <item name="android:layout_width">@dimen/normal_btn_width</item>
        <item name="android:layout_height">@dimen/normal_btn_height</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">@dimen/font20</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/round_fill_yellow</item>
        <item name="android:textColor">@color/dark_gray_color</item>
    </style>

    <style name="large_btn_style">
        <item name="android:layout_width">@dimen/large_btn_width</item>
        <item name="android:layout_height">@dimen/large_btn_height</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textSize">@dimen/font20</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/round_fill_yellow</item>
        <item name="android:textColor">@color/dark_gray_color</item>
    </style>

    <!-- Radio Button Style -->
    <style name="menu_radio_btn_style">
        <item name="android:layout_height">@dimen/menu_btn_size</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@drawable/menu_radio_btn_color</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="tab_radio_btn_style">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/font20</item>
        <item name="android:textColor">@drawable/tab_radio_btn_color</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Popularity -->

    <style name="MMListItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">8.0dip</item>
        <item name="android:paddingRight">4.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MMFontTitleInList">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff595c61</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>


    <!-- Chat -->
    <style name="chat_text_name_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingRight">20dip</item>
        <item name="android:textColor">@color/light_gray_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/timestampe_bg</item>
    </style>

    <style name="devide_line_eee">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5dp</item>
        <item name="android:background">#eee</item>
    </style>

    <style name="chat_content_date_style">
        <item name="android:minHeight">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <!-- placeholder style -->
    <style name="placeholder_style">
        <item name="android:textSize">@dimen/font15</item>
        <item name="android:textColor">@color/place_holder_color</item>
    </style>

    <style name="txt_ContextStyle1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Image User Photo Style Round -->
    <style name="img_photo_round">
        <item name="android:scaleType">fitXY</item>
    </style>

    <!-- Image User Photo Style Circle -->
    <style name="img_photo_circle">
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/yellowBack</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>
    <style name="Theme.App.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlActivated">@android:color/black</item>
        <item name="colorControlHighlight">@android:color/black</item>
    </style>
</resources>
